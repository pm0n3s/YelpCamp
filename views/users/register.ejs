<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6 mb-3">
        <div class="card shadow">
            <img src="https://images.unsplash.com/photo-1496545672447-f699b503d270?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2000&q=80"
                class="card-img-top" alt="">
            <div class="card-body">
                <h5 class="card-title">Sign up</h5>
                <form action="/register" method="POST" class="validated-form" novalidate>
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" name="username" placeholder='@' required>
                        <label class="form-label" for="username">Username</label>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" type="email" name="email" placeholder='@' required>
                        <label class="form-label" for="email">Email</label>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" type="password" name="password" placeholder='@' required>
                        <label class="form-label" for="password">Password</label>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <button class="btn btn-success col-12">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>