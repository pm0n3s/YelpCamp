<% layout('layouts/boilerplate') %>
<div id="map" class="cluster-map mb-3"></div>
<h1>All Campgrounds</h1>

<% for (let camp of campgrounds){ %>
<div class="car mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(camp.images.length) {%>
            <img class="img-fluid" src="<%= camp.images[0].thumbnail %>">
            <% } else {%>
            <img class="img-fluid" src="https://via.placeholder.com/510.png?text=YelpCamp">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %></h5>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location %></small>
                </p>
                <p class="card-text"><%= camp.description %></p>
                <a class='btn btn-primary' href="/campgrounds/<%= camp._id  %>">View Camp</a>
            </div>
        </div>
    </div>

</div>
<% } %>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
</script>
<script>
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>