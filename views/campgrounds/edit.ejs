<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-body">
                <h4 class="text-center card-title">Edit <%= camp.title %></h4>
                <form action="/campgrounds/<%= camp._id%>?_method=PUT" enctype="multipart/form-data" method="POST"
                    novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" name="campground[title]" id="title"
                            value='<%= camp.title %>' required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" name="campground[location]" id="location"
                            value='<%= camp.location %>' required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input id="price" name="campground[price]" type="text" class="form-control"
                                aria-label="price" value='<%= camp.price %>' required>
                        </div>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" name="campground[description]" id="description"
                            required><%= camp.description %></textarea>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="imagefile">Upload</label>
                        <input type="file" class="form-control" name="images" multiple>
                    </div>
                    <div class="mb-3">
                        <label for="">Delete Photos</label>
                        <hr>
                        <% camp.images.forEach((img, i)=>{  %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%= i %>"
                                value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete</label>
                        <% }) %>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Update Campground</button>
                        <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">Back to Campground</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>